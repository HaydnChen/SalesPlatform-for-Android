<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listBackground"
    android:orientation="vertical">

    <TwoLineListItem
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/mainBackground"></TwoLineListItem>


    <TwoLineListItem
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listLine"></TwoLineListItem>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quotation_edit__tab_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginRight="0dp"
            android:layout_weight="0"
            android:src="@drawable/ic_action_calculator_black" />

        <TextView
            android:id="@+id/quotation_edit__tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="2000"
            android:text="Quotation "
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

    <TwoLineListItem
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listLine"></TwoLineListItem>

</LinearLayout>