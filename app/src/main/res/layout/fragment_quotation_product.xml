<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quotation_product"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textIsSelectable="true"
    tools:context="com.ebaotech.salesplatform.ui.quotation.QuotationEditProductActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Title"/>
        <TwoLineListItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="2dp"
            android:background="@color/separator_line"/>
        <com.rey.material.widget.EditText
            android:id="@+id/et_label__customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Input Customer Name"
            app:et_inputId="@+id/et_input__customer_name"
            app:et_supportMode="none"
            app:v_styleId="@array/edittext"/>

    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>
